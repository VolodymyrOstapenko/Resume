{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with main}}
	<main>
		<section>
			<b>{{> title data="Work history" big=true}}</b>
			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>

						<div>
							{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працюємо)
							{{/if}}
						</div>

						<br>

						<div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>

						<br>
						<br>

						<div>
							<strong>({{projectAmount}})</strong>
						</div>

						<br>

						<ul>
							{{#each projects}}
							<li>
								<div>{{> link text=name href=url blank=true noLine=true}}</div>
							</li>
							{{/each}}
						</ul>
						{{/each}}

						<br>

						<div>
							<p>{{about}}</p>
						</div>

						<br>

						<div>
							<em>Project staks({{stakAmout}})</em>
						</div>

						<br>

						<div>
							<ul>
								{{#each stacks}}
								<li>{{name}}</li>
								{{/each}}
							</ul>
						</div>

						<br>

						<div>
							<em>Project awards({{awardAmout}})</em>
						</div>

						<br>

						<div>
							<ul>
								{{#each awards}}
								<li>{{name}}</li>
								{{/each}}
							</ul>
						</div>
					</li>
					<br>
					{{/each}}
				</ul>
			</div>
		</section>
	</main>
	{{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}